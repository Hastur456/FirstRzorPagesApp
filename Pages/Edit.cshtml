@page "{id:int}"
@model FirstRazorPages.Pages.EditModel
@{
}

<h2>Редатирование пользователя</h2>

<form method="post">
    <input name="id" value="@Model.Person?.Id" type="hidden" />
    <p>
        <label>Имя</label><br />
        <input name="userName" value="@Model.Person?.UserName" />
    </p>
    <p>
        <label>Возраст</label><br />
        <input name="age" value="@Model.Person?.Age" type="number" />
    </p>
    <input type="submit" value="Сохранить" />
</form>